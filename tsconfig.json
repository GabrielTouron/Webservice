{
  "compilerOptions": {
    "target": "ES2022",         
    "module": "CommonJS",      
    "outDir": "./build",                                       

    "strict": true,    
    "esModuleInterop": true,                         
    "forceConsistentCasingInFileNames": true,                                        
    "skipLibCheck": true ,
    
    "experimentalDecorators": true,                    
    "emitDecoratorMetadata": true,                    

    "resolveJsonModule": true
  }
}
