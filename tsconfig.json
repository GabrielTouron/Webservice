{
  "compilerOptions": {
    "target": "es2022",                           
    "experimentalDecorators": true,                    
    "emitDecoratorMetadata": true,                    

    "module": "commonjs",                             
    "resolveJsonModule": true,

    "outDir": "./build",                

    "esModuleInterop": true,                         
    "forceConsistentCasingInFileNames": true,         
    "strict": true,                                   
    "skipLibCheck": true                              
  }
}
