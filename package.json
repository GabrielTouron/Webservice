{
    "name": "webservice",
    "version": "1.0.0",
    "description": "Exemple d'API REST",
    "main": "server.js",
    "scripts": {
        "build": "tsc",
        "dev": "npx nodemon ./src/app.ts",
        "start": "tsc && npm run dev",
        "seed": "npx prisma db seed",
        "lint": "eslint src/**/*.ts",
        "format": "eslint src/**/*.ts --fix",
        "prepare": "husky install",
        "docker:dev": "npm install && npx prisma generate && npx prisma migrate deploy && npm run seed && npm start",
        "docker:prod": "npm install --production && npx prisma generate && npx prisma migrate deploy && npm start"
    },
    "keywords": [
        "nodejs",
        "typescript",
        "restapi",
        "crud"
    ],
    "author": "Thomas Morgana",
    "license": "ISC",
    "devDependencies": {
        "@commitlint/cli": "^18.2.0",
        "@commitlint/config-conventional": "^18.1.0",
        "@faker-js/faker": "^8.0.2",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/express-pino-logger": "^4.0.4",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/node": "^20.4.5",
        "@typescript-eslint/eslint-plugin": "^6.9.0",
        "@typescript-eslint/parser": "^6.9.0",
        "eslint": "^8.52.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.1",
        "husky": "^8.0.0",
        "nodemon": "^3.0.1",
        "pino-pretty": "^10.2.3",
        "prettier": "^3.0.3",
        "prisma": "^5.1.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.6",
        "validate-branch-name": "^1.3.0"
    },
    "dependencies": {
        "@prisma/client": "^5.1.1",
        "@types/bcryptjs": "^2.4.5",
        "@types/pino": "^7.0.5",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-pino-logger": "^7.0.0",
        "express-rate-limit": "^7.1.1",
        "jsonwebtoken": "^9.0.1",
        "pino": "^8.16.1"
    },
    "prisma": {
        "schema": "src/prisma/schema.prisma",
        "seed": "ts-node src/prisma/seeds"
    }
}
